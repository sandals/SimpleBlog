<div class="pure-u-1 pure-u-sm-2-5">
<div class="bio">
	<div class="content-subheading"><strong>About</strong></div>
	<img class="pure-img about_image" src="http://thenetworkportrait.com/wp-content/uploads/2012/10/IMG_1977-Version-3.jpg">
	<p><%= @about.bio %></p>
</div>
</div>
<% if @articles.any? %>
	<div class="pure-u-1 pure-u-sm-3-5">
		<div class="content">
			<div class="content-subheading spacer"><strong>Latest Articles</strong></div>
			<% @articles.each do |article| -%>
				<div class="post-listing">
					<div class="post-header">
						<h2 class="post-title"><%= link_to article.title, article %></h2>
						<p class="post-meta">Posted <%= time_ago_in_words(article.created_at) %> ago</p>
					</div>
					<div class="post-excerpt">
						<p><%= article.excerpt %></p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
<% else -%>
	<div class="pure-u-1 pure-u-md-3-5">
		<div class="content">
			<h1>We haven't published anything yet!</h1>
		</div>
	</div>
<% end %>
