<% if @articles.any? %>
	<div class="content-subheading spacer"><strong>All Articles</strong></div>
	<% @articles.each do |article| -%>
		<div class="post-listing">
			<div class="post-header">
				<h2 class="post-title"><%= link_to article.title, article %></h2>
				<p class="post-meta">Posted <%= time_ago_in_words(article.created_at) %> ago</p>
			</div>
			<div class="post-excerpt">
				<p><%= article.excerpt %></p>
			</div>
		</div>
	<% end %>
<% else -%>
	<h1>We haven't published anything yet!</h1>
<% end %>
